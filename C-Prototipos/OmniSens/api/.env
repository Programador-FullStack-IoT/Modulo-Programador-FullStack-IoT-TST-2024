# Configuración del Servidor
NODE_ENV=development
PORT=3000

# Configuración de la Base de Datos (MariaDB - AQI_DB)
DB_HOST=telecomunicaciones.ddns.net
DB_PORT=6034
DB_USER=AQI_DB
DB_PASSWORD=cohorte*2024
DB_NAME=AQI_DB

# Configuración del Broker MQTT
MQTT_BROKER_URL=mqtt://telecomunicaciones.ddns.net:2480
MQTT_USERNAME=telecomunicaciones
MQTT_PASSWORD=cohorte*2024 # Suponiendo mismas credenciales que otros servicios

# Temas MQTT
MQTT_DATA_TOPIC_PATTERN=omnisens/devices/+/data
MQTT_STATUS_TOPIC_PATTERN=omnisens/devices/+/status
MQTT_COMMAND_TOPIC_PREFIX=omnisens/devices/

# Seguridad de la API
API_KEY=your-secret-api-key # Cambia esto por una clave fuerte y única